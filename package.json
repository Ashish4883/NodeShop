{
  "name": "nodeshop",
  "version": "1.0.0",
  "description": "eCommerce Application built with MERN Stack",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend && mv frontend/build public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ashish4883/NodeShop.git"
  },
  "author": "Ashish Mishra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ashish4883/NodeShop/issues"
  },
  "homepage": "https://github.com/Ashish4883/NodeShop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.1",
    "nodemon": "^3.0.3"
  }
}
